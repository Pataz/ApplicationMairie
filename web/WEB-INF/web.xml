<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Production</param-value>
    </context-param>
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>none</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.CONFIG_FILES</param-name>
        <param-value>/WEB-INF/faces-config.xml</param-value>
    </context-param>
    <context-param>
        <param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
        <param-value>true</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
  
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            1000
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>javax.faces.application.ViewExpiredException</exception-type>
        <location>/connexion/indexExpirePage.xhtml</location>
    </error-page>
    <error-page>
        <error-code>404</error-code>
        <location>/connexion/index404.xhtml</location>
    </error-page>
    <error-page>
        <error-code>401</error-code>
        <location>/connexion/index401.xhtml</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/connexion/index403.xhtml</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/connexion/index500.xhtml</location>
    </error-page>
    <context-param>
        <description>repertoire de base de l'application</description>
        <param-name>APP_DIR</param-name>
        <!--<param-value>C:/xess/ienv/work/projects/forseti_v2</param-value>-->
        <param-value>/opt/forsetiPenal/conf</param-value>
    </context-param>
    <context-param>
        <description>empecher l'expiration de la vue</description>
        <param-name>com.sun.faces.disableVersionTracking</param-name>
        <param-value>true</param-value>
    </context-param>
    <context-param>
        <description>empêcher l'expiration de la vue</description>
        <param-name>javax.faces.STATE_SAVING_METHOD</param-name>
        <param-value>client</param-value>
    </context-param>
    <security-constraint>
        <display-name>AdminConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>AdminZone</web-resource-name>
            <description/>
            <!--<url-pattern>/administration/*</url-pattern>-->
            <!--<url-pattern>/aide/*</url-pattern>-->
            <url-pattern>/index.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Admin</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>CommonConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>CommonZone</web-resource-name>
            <description/>
            <url-pattern>/connexion/*</url-pattern>
            <url-pattern>/gestionplainte/*</url-pattern>
            <url-pattern>/journal/*</url-pattern>
             <url-pattern>/aide/*</url-pattern>
           <url-pattern>/index.xhtml</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>Common</role-name>
        </auth-constraint>
        <user-data-constraint>
            <description/>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>
   <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>ldapGRHRealm</realm-name>
        <form-login-config>
            <form-login-page>/connexion/login.xhtml</form-login-page>
            <form-error-page>/connexion/loginerror.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description>Administrateur</description>
        <role-name>Admin</role-name>
    </security-role>
    <security-role>
        <description>Utilisateur enregistré</description>
        <role-name>Common</role-name>
    </security-role>
 
</web-app>
